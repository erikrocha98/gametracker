{
    "name": "gametracker/app",
    "description": "Sistema de gerenciamento de biblioteca de jogos",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "vlucas/phpdotenv": "^5.5",
        "guzzlehttp/guzzle": "^7.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "GameTracker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GameTracker\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "start": "php -S localhost:8000 -t public"
    }
}
